<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/employeeDirectoryListFragment">

    <fragment
        android:id="@+id/employeeDirectoryListFragment"
        tools:layout="@layout/employee_directory_list_fragment"
        android:name="com.example.employeedirectory.presentation.EmployeeDirectoryListFragment"
        android:label="EmployeeDirectoryListFragment" >
        <action
            android:id="@+id/showEmployeeDetail"
            app:destination="@id/employeeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/employeeDetailFragment"
        android:name="com.example.employeedirectory.presentation.detail.EmployeeDetailFragment"
        android:label="fragment_employee_detail"
        tools:layout="@layout/fragment_employee_detail" >
        <argument
            android:name="employeeID"
            app:argType="string" />
    </fragment>
</navigation>