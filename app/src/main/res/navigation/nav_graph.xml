<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/employeeDirectoryListFragment">

    <fragment
        android:id="@+id/employeeDirectoryListFragment"
        tools:layout="@layout/employee_directory_list_fragment"
        android:name="com.example.employeedirectory.presentation.EmployeeDirectoryListFragment"
        android:label="EmployeeDirectoryListFragment" >
        <action
            android:id="@+id/goToDetailScreen"
            app:destination="@id/employeeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/employeeDetailFragment"
        android:name="com.example.employeedirectory.presentation.EmployeeDetailFragment"
        android:label="fragment_enmployee_detail"
        tools:layout="@layout/employee_detail_fragment" >
        <argument
            android:name="Name"
            app:argType="string" />
        <argument
            android:name="Bio"
            app:argType="string" />
        <argument
            android:name="largePhotoURL"
            app:argType="string" />
    </fragment>
</navigation>